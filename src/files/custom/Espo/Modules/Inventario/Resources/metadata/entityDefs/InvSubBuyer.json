{
    "fields": {
        "name": {
            "type": "varchar",
            "maxLength": 255,
            "trim": true,
            "required": true
        },
        "buyer": {
            "type": "enum",
            "options": ["Inquilino", "Compradores"],  
            "default": "Compradores",
            "required": true
        },
        "descripcionLarga": {                         
            "type": "text",
            "rows": 20,
            "required": false,
            "isHtml": true,
            "view": "views/fields/wysiwyg"
        },
        "deleted": {
            "type": "bool",
            "default": false
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "invPropiedades": {
            "type": "hasMany",
            "entity": "InvPropiedades",
            "foreign": "subBuyers",
            "relationName": "invPropiedadesInvSubBuyer"
        }
    },
    "collection": {
        "orderBy": "name",
        "order": "asc"
    }
}