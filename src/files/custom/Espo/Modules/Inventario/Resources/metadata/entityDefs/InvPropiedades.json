{
    "fields": {
        "name": {
            "type": "varchar",
            "required": false,
            "trim": true,
            "maxLength": 255
        },
        "idPropiedad": {
            "type": "link",
            "required": true,
            "view": "views/fields/link"
        },
        "tipoPersona": {
            "type": "enum",
            "options": ["Natural", "Juridico"],
            "default": "Natural"
        },
        "buyer": {
            "type": "enum",
            "options": ["Comprador", "Arrendatario"],
            "default": "Comprador"
        },
        "subBuyers": {
            "type": "linkMultiple",
            "entity": "InvSubBuyer",
            "view": "views/fields/link-multiple"
        },
        "precio": {
            "type": "enum",
            "options": ["Fuera del rango de precio", "En rango", "Cercano al rango de precio"],
            "default": "Fuera del rango de precio",
            "style": {
                "Cercano al rango de precio": "warning",
                "En rango": "success",
                "Fuera del rango de precio": "danger"
            }
        },
        "ubicacion": {
            "type": "enum",
            "options": ["Ubicación no atractiva", "Ubicación medianamente atractiva", "Ubicación atractiva"],
            "default": "Ubicación no atractiva",
            "style": {
                "Ubicación no atractiva": "danger",
                "Ubicación medianamente atractiva": "warning",
                "Ubicación atractiva": "success"
            }
        },
        "exclusividad": {
            "type": "enum",
            "options": [
                "Sin exclusividad",
                "Exclusividad interna de CENTURY con contrato firmado",
                "Exclusividad pura o total con contrato firmado"
            ],
            "default": "Sin exclusividad"
        },
        "apoderado": {
            "type": "bool",
            "default": false
        },
        "demanda": {
            "type": "enum",
            "options": ["Baja demanda", "Media demanda", "Alta demanda"],
            "default": "Baja demanda"
        },
        "estatusPropiedad": {
            "type": "enum",
            "options": ["Verde", "Amarillo", "Rojo"],
            "default": "Rojo",
            "style": {
                "Verde": "success",
                "Amarillo": "warning",
                "Rojo": "danger"
            }
        },
        "deleted": {
            "type": "bool",
            "default": false
        },
        "createdAt": {
            "type": "datetime",
            "readOnly": true
        },
        "modifiedAt": {
            "type": "datetime",
            "readOnly": true
        },
        "createdBy": {
            "type": "link",
            "readOnly": true
        },
        "modifiedBy": {
            "type": "link",
            "readOnly": true
        }
    },
    "links": {
        "idPropiedad": {
            "type": "belongsTo",
            "entity": "Propiedades",
            "foreign": "invPropiedad"
        },
        "recaudos": {
            "type": "hasMany",
            "entity": "InvPropiedadesRecaudos",
            "foreign": "idInvPropiedades"
        },
        "subBuyers": {
            "type": "hasMany",
            "entity": "InvSubBuyer",
            "foreign": "invPropiedades",
            "relationName": "invPropiedadesInvSubBuyer"
        },
        "createdBy": {
            "type": "belongsTo",
            "entity": "User"
        },
        "modifiedBy": {
            "type": "belongsTo",
            "entity": "User"
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    }
}